{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "type": "string"
    },
    "appName": {
      "type": "string",
      "defaultValue": "northstar"
    },
    "objectID": {
      "type": "string"
    }
  },
  "variables": {
    "location": "[replace(replace(replace(parameters('environment'), 'prd', 'eastus2'), 'npd', 'centralus'), 'sbx', 'centralus')]",
    "regionName": "[replace(replace(replace(replace(replace(variables('location'),'north','n'), 'east', 'e'),'south', 's'),'west', 'w'),'central', 'c')]",
    "appPurpose": "[toLower(parameters('appName'))]",
    "nameFormat": "[concat(variables('regionName'), '-', parameters('environment'), '-', variables('appPurpose'), '-')]",
    "shortName": {
      "keyVault": "kv",
      "logAnalytics": "law",
      "azureFirewall": "azfw",
      "networkSecurityGroup": "nsg",
      "azureFrontDoor": "afd",
      "publicIP": "pip",
      "managedIdentity": "mi",
      "sqlDB": "sql",
      "sqlMI": "sqlmi"
    }
  },
  "resources": [
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2019-09-01",
      "name": "[concat(variables('nameFormat'), variables('shortName').keyVault)]",
      "location": "[variables('location')]",
      "tags": {
        "Application": "[variables('appPurpose')]",
        "Environment": "[parameters('environment')]",
        "Location": "[variables('location')]",
        "Blueprint": "platform-management"
      },
      "properties": {
        "enabledForDeployment": true,
        "enabledForTemplateDeployment": true,
        "enabledForDiskEncryption": true,
        "enableSoftDelete": true,
        "tenantId": "[subscription().tenantId]",
        "accessPolicies": [
          {
            "tenantId": "[subscription().tenantId]",
            "objectId": "[parameters('objectID')]",
            "permissions": {
              "certificates": [
                "All"
              ],
              "secrets": [
                "All"
              ],
              "keys": [
                "All"
              ]
            }
          }
        ],
        "sku": {
          "name": "standard",
          "family": "A"
        }
      }
    }
  ],
  "outputs": {
  }
}