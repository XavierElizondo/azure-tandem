{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment": {
            "type": "string"
        },
        "appName": {
            "type": "string",
            "defaultValue": "northstar"
        }
    },
    "variables": {
    "location": "[replace(replace(replace(parameters('environment'), 'prd', 'eastus2'), 'npd', 'centralus'), 'sbx', 'centralus')]",
    "regionName": "[replace(replace(replace(replace(replace(variables('location'),'north','n'), 'east', 'e'),'south', 's'),'west', 'w'),'central', 'c')]",
    "appPurpose": "[toLower(parameters('appName'))]",
    "nameFormat": "[concat(variables('regionName'), '-', parameters('environment'), '-', variables('appPurpose'), '-')]",
    "shortName": {
        "keyVault": "kv",
        "logAnalytics": "law",
        "azureFirewall": "azfw",
        "networkSecurityGroup": "nsg",
        "azureFrontDoor": "afd",
        "publicIP": "pip",
        "managedIdentity": "mi",
        "sqlDB": "sql",
        "sqlMI": "sqlmi"
        }
    },
    "resources": [
        {
            "name": "[concat(variables('nameFormat'), variables('shortName').managedIdentity)]",
            "type": "Microsoft.ManagedIdentity/userAssignedIdentities",
            "apiVersion": "2018-11-30",
            "location": "[variables('location')]",
            "tags": {
                "Application": "[variables('appPurpose')]",
                "Environment": "[parameters('environment')]",
                "Location": "[variables('location')]"
            },
            "properties": {}
        }
    ],
    "outputs": {
        "managedIdentity": {
            "type": "string",
            "value": "[reference(concat(variables('nameFormat'), variables('shortName').managedIdentity)).principalId]"
          }
    }
}