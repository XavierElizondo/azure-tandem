{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment": {
            "type": "string",
            "allowedValues": ["prd", "npd", "sbx"]
        },
        "appName": {
            "type": "string"
        },
        "vnetCidr": {
            "type": "string",
            "defaultValue": "10.0.0.0/20",
            "metadata": {
                "description": "Virtual network (VNet) address space in CIDR notation."
            }
        },
        "firstSubnetSize": {
            "type": "string",
            "allowedValues": [ "Small", "Medium", "Large"],
            "metadata": {
                "description": "This is the size of the first subnet in the VNet. Small adds 3 to the CIDR mask, medium 2, and large 1."
            }
        }
    },
    "variables": {
        "location": "[replace(replace(replace(parameters('environment'), 'prd', 'eastus2'), 'npd', 'centralus'), 'sbx', 'centralus')]",
        "regionName": "[replace(replace(replace(replace(replace(variables('location'),'north','n'), 'east', 'e'),'south', 's'),'west', 'w'),'central', 'c')]",
        "subnetMask": "[replace(replace(replace(parameters('firstSubnetSize'),'Small','3'), 'Medium', '2'),'Large', '1')]",
        "appPurpose": "[toLower(parameters('appName'))]",
        "nameFormat": "[concat(variables('regionName'), '-', parameters('environment'), '-', variables('appPurpose'), '-')]",
        "shortName": {
            "keyVault": "kv",
            "logAnalytics": "law",
            "azureFirewall": "azfw",
            "networkSecurityGroup": "nsg",
            "azureFrontDoor": "afd",
            "publicIP": "pip",
            "managedIdentity": "mi",
            "sqlDB": "sql",
            "sqlMI": "sqlmi"
            },
      "vnetParse": "[split(parameters('vnetCidr'), '/')]",
      "firstSubnet": "[concat(variables('vnetParse')[0], '/', add(int(variables('vnetParse')[1]), int(variables('subnetMask'))))]",
      "vnetName": "[concat(variables('regionName'), '-', parameters('environment'), '-', variables('appPurpose'), '-vnet-', variables('vnetParse')[0], '_', variables('vnetParse')[1])]",
      "subName": "[concat(variables('regionName'), '-', parameters('environment'), '-', variables('appPurpose'), '-sub-', variables('vnetParse')[0], '_', add(int(variables('vnetParse')[1]), int(variables('subnetMask'))))]"
    },
    "resources": [
        {
        "name": "[variables('vnetName')]",
        "type": "Microsoft.Network/virtualNetworks",
        "apiVersion": "2019-04-01",
        "location": "[variables('location')]",
        "comments": "VNet and Subnet loop to build networks",
        "tags": {
            "Blueprint": "network",
            "Purpose": "[variables('appPurpose')]",
            "Environment": "[parameters('environment')]",
            "Location": "[variables('location')]"
        },
        "properties": {
            "addressSpace": {
            "addressPrefixes": [
                "[parameters('vnetCidr')]"
            ]
            },
            "subnets": [
            {
                "name": "[variables('subName')]",
                "properties": {
                "addressPrefix": "[variables('firstSubnet')]"
                }
            }
            ]
        }
        }
    ],
    "outputs": {
      "cidr": {
        "type": "string",
        "value": "[parameters('vnetCidr')]"
      },
      "subId": {
        "type": "string",
        "value": "[subscription().subscriptionId]"
      }
    }
  }