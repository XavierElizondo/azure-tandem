{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment": {
            "type": "string",
            "allowedValues": [ "prd", "npd", "sbx" ]
        },
        "appName": {
            "type": "string",
            "defaultValue": "northstar"
        },
        "dataClass": {
            "type": "string",
            "allowedValues": [ "Public", "Internal", "Restricted" ]
        }
    },
    "variables": {
    "location": "[replace(replace(replace(parameters('environment'), 'prd', 'eastus2'), 'npd', 'centralus'), 'sbx', 'centralus')]",
    "regionName": "[replace(replace(replace(replace(replace(variables('location'),'north','n'), 'east', 'e'),'south', 's'),'west', 'w'),'central', 'c')]",
    "appPurpose": "[toLower(parameters('appName'))]",
    "storageName": "[concat(variables('regionName'), parameters('environment'), variables('appPurpose'), 'sa', take(uniqueString(resourceGroup().id), 4))]",
    "nameFormat": "[concat(variables('regionName'), '-', parameters('environment'), '-', variables('appPurpose'), '-')]",
    "shortName": {
        "keyVault": "kv",
        "logAnalytics": "law",
        "azureFirewall": "azfw",
        "networkSecurityGroup": "nsg",
        "azureFrontDoor": "afd",
        "appGateway": "agw",
        "loadBalancer": "alb",
        "publicIP": "pip",
        "routeTable": "rt",
        "virtualMachine": "vm",
        "networkInterface": "nic",
        "managedDisk": "md",
        "managedIdentity": "mi",
        "recoveryServicesVault": "rsv",
        "sqlDB": "sql",
        "sqlMI": "sqlmi"
        }
    },
    "resources": [
        {
            "name": "[variables('storageName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-04-01",
            "location": "[variables('location')]",
            "tags": {
                "Environment": "[parameters('environment')]",
                "Location": "[variables('location')]",
                "Data Classification": "[parameters('dataClass')]"
            },
            "sku": {
                "name": "Standard_GRS"
            },
            "kind": "StorageV2",
            "properties": {
                "supportsHttpsTrafficOnly": true,
                "deleteRetentionPolicy": {
                    "enabled": true,
                    "day": 30
                }
            }
        }
    ],
    "outputs": {
        "storageName": {
            "type": "string",
            "value": "[variables('storageName')]"
        }
    }
}